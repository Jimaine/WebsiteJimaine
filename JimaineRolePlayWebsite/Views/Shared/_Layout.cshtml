<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Roleplaying support with session scheduler and forum.">
    <meta name="keywords" content="Roleyplay, forum, scheduler, Dungeoons and Dragons, Das schwarze Auge">
    <meta name="author" content="Mike Gr&uuml;newald">
    <title>Jimaine - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="bodyWrapper">
        <header>
            <nav class="navbar navbar-inverse navbar-fixed-top MyNavbar">
                <div class="container">
                    <a href="@Url.Action("Index", "Home")">
                        <img src="@Url.Content("~/Content/Images/JimaineV2.png")" class="MainLogo" alt="Jimaine-Logo">
                    </a>
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Startseite", "Index", "Home")</li>
                            <li>@Html.ActionLink("Developing Days", "DevelopingDays", "Home")</li>
                            <li>@Html.ActionLink("ToDos", "ToDo", "Home")</li>
                            @*<li>@Html.ActionLink("Scheduler", "About", "Home")</li>*@
                            @*<li>@Html.ActionLink("Forum", "Contact", "Home")</li>*@
                        </ul>
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </nav>
        </header>
        <section>
            <div class="container body-content">
                @RenderBody()
                <hr />
                <footer>
                    <div>@Html.ActionLink("Über Jimaine", "About", "Home") | @Html.ActionLink("Datenschutz", "Privacy", "Home") | @Html.ActionLink("Kontakt", "Contact", "Home") | &copy; @DateTime.Now.Year by Mike Gr&uuml;newald</div>
                    <br />
                    @* cocacola.de: Nutzungsbedingungen | Kontakt | Datenschutz | Umgang mit Cookies | Impressum*@

                    @*<ul class="navbar-nav">
          <li>@Html.ActionLink("Über Jimaine", "About", "Home")</li>
          <li></li>
          <li>|</li>
          <li>&copy; @DateTime.Now.Year by Mike Gr&uuml;newald</li>
        </ul>*@
                </footer>
            </div>
        </section>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>
